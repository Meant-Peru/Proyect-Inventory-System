@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 40vh;">
    <div class="container">
        <div class="row text-center text-white">
            <div class="col-12">
                <h1 class="display-3 fw-bold mb-3">Sistema de Inventario</h1>
                <p class="lead fs-4">Gestiona tus productos, categorías y movimientos de manera eficiente</p>
            </div>
        </div>
    </div>
</div>

<div class="container mt-n5">
    <div class="row g-4">
        <!-- Tarjeta Productos -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#667eea" class="bi bi-box-seam" viewBox="0 0 16 16">
                            <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2zm3.564 1.426L5.596 5 8 5.961 14.154 3.5zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z"/>
                        </svg>
                    </div>
                    <h3 class="card-title fw-bold mb-3">Productos</h3>
                    <p class="card-text text-muted mb-4">Administra el catálogo completo de productos, stock y información detallada</p>
                    <a href="@Url.Action("Index", "Productos")" class="btn btn-primary btn-lg w-100">
                        Ver Productos
                    </a>
                </div>
            </div>
        </div>

        <!-- Tarjeta Categorías -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#f093fb" class="bi bi-tags" viewBox="0 0 16 16">
                            <path d="M3 2v4.586l7 7L14.586 9l-7-7zM2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586z"/>
                            <path d="M5.5 5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m0 1a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3M1 7.086a1 1 0 0 0 .293.707L8.75 15.25l-.043.043a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 0 7.586V3a1 1 0 0 1 1-1z"/>
                        </svg>
                    </div>
                    <h3 class="card-title fw-bold mb-3">Categorías</h3>
                    <p class="card-text text-muted mb-4">Organiza tus productos en categorías para una mejor clasificación</p>
                    <a href="@Url.Action("Index", "Categorias")" class="btn btn-primary btn-lg w-100" style="background-color: #f093fb; border-color: #f093fb;">
                        Ver Categorías
                    </a>
                </div>
            </div>
        </div>

        <!-- Tarjeta Movimientos -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 hover-card">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#4facfe" class="bi bi-arrow-left-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 11.5a.5.5 0 0 0 .5.5h11.793l-3.147 3.146a.5.5 0 0 0 .708.708l4-4a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 11H1.5a.5.5 0 0 0-.5.5m14-7a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H14.5a.5.5 0 0 1 .5.5"/>
                        </svg>
                    </div>
                    <h3 class="card-title fw-bold mb-3">Movimientos</h3>
                    <p class="card-text text-muted mb-4">Registra y consulta entradas, salidas y ajustes de inventario</p>
                    <a href="@Url.Action("Index", "Movimientos")" class="btn btn-primary btn-lg w-100" style="background-color: #4facfe; border-color: #4facfe;">
                        Ver Movimientos
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de información -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="fw-bold mb-3">Bienvenido al Sistema de Inventario</h4>
                            <p class="text-muted mb-0">
                                Esta aplicación te permite gestionar de forma integral tu inventario.
                                Puedes administrar productos, organizarlos por categorías y llevar un
                                registro detallado de todos los movimientos de stock.
                            </p>
                        </div>
                        <div class="col-md-4 text-center">
                            <span class="badge bg-success fs-5 px-4 py-2">Sistema Activo</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }
</style>
