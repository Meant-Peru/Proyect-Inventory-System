@using InventorySystem.Entities

@model Productos

<div class="row mt-4">
    <div class="col-sm-6 offset-sm-3">
        <h2 class="mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#2c3e50" class="bi bi-pencil-square me-2" viewBox="0 0 16 16" style="vertical-align: middle;">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
            </svg>
            Editar Producto
        </h2>

        <form asp-controller="Productos" asp-action="Edit" method="post">
            <input type="hidden" asp-for="ProductoID">

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" class="form-control" asp-for="Nombre">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Descripcion</label>
                <input type="text" class="form-control" asp-for="Descripcion">
            </div>

            <div class="mb-3">
                <label class="form-label">Categoria</label>
                <select class="form-select" asp-for="CategoriaID">
                    <option value="" disabled>--Seleccione una categoria--</option>
                    @if (ViewBag.Categorias != null)
                    {
                        foreach (var cat in ViewBag.Categorias)
                        {
                            <option value="@cat.CategoriaID" selected="@(cat.CategoriaID == Model.CategoriaID)">@cat.Nombre</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategoriaID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Stock Actual</label>
                <input type="number" class="form-control" asp-for="StockActual">
                <span asp-validation-for="StockActual" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Stock Minimo</label>
                <input type="number" class="form-control" asp-for="StockMinimo">
                <span asp-validation-for="StockMinimo" class="text-danger"></span>
            </div>

            @if (ViewBag.message != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.message
                </div>
            }

            <div class="d-grid gap-2 d-md-block">
                <button class="btn btn-primary" type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle me-1" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                        <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
                    </svg>
                    Actualizar
                </button>
                <a asp-controller="Productos" asp-action="Index" class="btn btn-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle me-1" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                    </svg>
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
