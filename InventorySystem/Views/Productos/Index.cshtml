@using InventorySystem.Entities

@model List<ProductosViewModel>

@{
}

<div class="row">
    <div class="col-sm-6">
        <h2>Productos</h2>
    </div>
    <div class="col-sm-6 text-end">
        <a href="/Productos/Create" class="btn btn-success">Nuevo Producto</a>
    </div>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}

<hr/>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Categoria</th>
                    <th>Stock Actual</th>
                    <th>Stock Minimo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductoID</td>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.CategoriaNombre</td>
                        <td>@item.StockActual</td>
                        <td>@item.StockMinimo</td>
                        <td>
                            <a asp-controller="Productos" asp-action="Edit" asp-route-id="@item.ProductoID" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-controller="Productos" asp-action="Delete" asp-route-id="@item.ProductoID" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

